@model IEnumerable<ControleDeServicos.Models.Servico>

@{
  ViewBag.Title = "Controle De Servicos";
}

<div class="jumbotron">
    <h1>Controle de Serviços</h1>
</div>

<form method="post">
  <input type="date" id="dateForSelect" /> 
</form>

<table class="table">
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Data)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Descricao)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Cliente.Nome)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Preco)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Cliente.Telefone1)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Cliente.Telefone2)
      </th>
      <th></th>
    </tr>

@foreach (var item in Model)
{
  <tr>
    <td>
      @Html.DisplayFor(modelItem => item.Data)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.Descricao)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.Cliente.Nome)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.Preco)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.Cliente.Telefone1)
    </td>
    <td>
      @Html.DisplayFor(modelItem => item.Cliente.Telefone2)
    </td>
    <td>
      @Html.ActionLink("Edit", "Edit", "Servico", new {id = item.Id}, new {} ) |
      @Html.ActionLink("Details", "Details", "Servico", new { id = item.Id }, new {}) |
      @Html.ActionLink("Delete", "Delete",  "Servico", new { id = item.Id }, new {})
    </td>
  </tr>
}

</table>